<?xml version="1.0"?>
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <appSettings>
    <add key="VulcanIndexAttachmentPluginsEnabled" value="true" xdt:Transform="InsertIfMissing" xdt:Locator="Match(key)" />
    <add key="VulcanIndexAttachmentFileLimitEnabled" value="false" xdt:Transform="InsertIfMissing" xdt:Locator="Match(key)" />    
    <add key="VulcanIndexAttachmentFileExtensions" value="pdf,doc,docx,xls,xlsx,ppt,pptx,txt,rtf" xdt:Transform="InsertIfMissing" xdt:Locator="Match(key)" />
  </appSettings>
</configuration>